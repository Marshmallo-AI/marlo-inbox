# =============================================================================
# marlo-inbox Environment Configuration
# =============================================================================

# === APP ===
APP_NAME="marlo-inbox"
APP_BASE_URL="http://localhost:5173"
API_PREFIX="/api"

# === AUTH0 ===
# Get these from Auth0 Dashboard > Applications > Your App
AUTH0_DOMAIN="your-tenant.auth0.com"
AUTH0_CLIENT_ID="your-client-id"
AUTH0_CLIENT_SECRET="your-client-secret"
AUTH0_AUDIENCE="https://your-api-identifier"

# Session encryption key (generate with: openssl rand -hex 32)
AUTH0_SECRET="generate-a-random-32-byte-hex-string"

# Auth0 Custom API Client (for Token Vault - federated token exchange)
# Create a Machine-to-Machine app in Auth0 with Token Exchange grant
AUTH0_CUSTOM_API_CLIENT_ID="your-custom-api-client-id"
AUTH0_CUSTOM_API_CLIENT_SECRET="your-custom-api-client-secret"

# === LLM ===
OPENAI_API_KEY="sk-..."

# === LANGGRAPH ===
LANGGRAPH_API_URL="http://localhost:54367"

# === MARLO ===
MARLO_API_KEY="your-marlo-api-key"

# === LANGSMITH (optional) ===
LANGSMITH_API_KEY=""
LANGSMITH_PROJECT="marlo-inbox"
LANGCHAIN_TRACING_V2="false"
